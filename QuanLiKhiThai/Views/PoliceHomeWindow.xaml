<Window x:Class="QuanLiKhiThai.Views.PoliceHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLiKhiThai.Views"
        mc:Ignorable="d"
        Title="Emissions Inspection Management System - Traffic Police"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#3F51B5" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="EMISSIONS INSPECTION MANAGEMENT SYSTEM" 
                               FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="TRAFFIC POLICE PORTAL" 
                               FontSize="14" Foreground="White" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                    <Label x:Name="lblWelcome" Content="Welcome, [User Name]" 
                           Foreground="White" FontSize="14" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="SYSTEM FUNCTIONS" 
                       FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Vehicle Lookup Feature -->
                <Border Grid.Column="0" Margin="10" Background="White" 
                        BorderBrush="#DDDDDD" BorderThickness="1" 
                        CornerRadius="8" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="VEHICLE LOOKUP" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

                        <Border Grid.Row="1" Background="#E3F2FD" CornerRadius="5" Padding="15">
                            <StackPanel VerticalAlignment="Center">

                                <TextBlock Text="Check vehicle inspection status through license plate number" 
                                           TextAlignment="Center" TextWrapping="Wrap" 
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="This feature allows quick lookup of vehicle inspection information to verify compliance with emissions regulations"
                                           TextAlignment="Center" TextWrapping="Wrap" 
                                           Foreground="#555" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <Button Grid.Row="2" x:Name="btnVehicleLookup" 
                                Content="SEARCH VEHICLE" Padding="15,12" 
                                Background="#2196F3" Foreground="White" 
                                FontWeight="SemiBold" BorderThickness="0"
                                Margin="0,15,0,0"
                                Click="btnVehicleLookup_Click"/>
                    </Grid>
                </Border>

                <!-- Violation Record Feature -->
                <Border Grid.Column="1" Margin="10" Background="White" 
                        BorderBrush="#DDDDDD" BorderThickness="1" 
                        CornerRadius="8" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="VIOLATION REPORTING" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

                        <Border Grid.Row="1" Background="#FBE9E7" CornerRadius="5" Padding="15">
                            <StackPanel VerticalAlignment="Center">

                                <TextBlock Text="Issue violation reports for vehicles that fail to comply with emissions inspection regulations" 
                                           TextAlignment="Center" TextWrapping="Wrap"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="This feature allows recording and processing of emissions inspection violations, contributing to environmental protection"
                                           TextAlignment="Center" TextWrapping="Wrap" 
                                           Foreground="#555" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <Button Grid.Row="2" x:Name="btnViolationRecord" 
                                Content="CREATE VIOLATION REPORT" Padding="15,12" 
                                Background="#F44336" Foreground="White" 
                                FontWeight="SemiBold" BorderThickness="0"
                                Margin="0,15,0,0"
                                Click="btnViolationRecord_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="© 2024 - Emissions Inspection Management System" 
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1" x:Name="btnLogout" 
                        Content="LOGOUT" Padding="20,8" 
                        Background="#616161" Foreground="White" 
                        BorderThickness="0" Click="btnLogout_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
