<!-- File: Views/CancellationReasonWindow.xaml -->
<Window x:Class="QuanLiKhiThai.Views.CancellationReasonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLiKhiThai.Views"
        mc:Ignorable="d"
        Title="Cancel Inspection" Height="300" Width="450" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        Background="Beige">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Enter Cancellation Reason" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,15"/>

        <!-- Vehicle Info -->
        <TextBlock Grid.Row="1" 
                   x:Name="lblVehicleInfo"
                   Text="Vehicle: " 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,10"/>

        <!-- Reason TextBox -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Reason for Cancellation:" 
                       Margin="0,0,0,5"/>

            <TextBox Grid.Row="1" 
                     x:Name="txtCancellationReason" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="8"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>

            <Button Content="Confirm" 
                    Width="100" 
                    Height="30" 
                    IsDefault="True"
                    Background="#007BFF" 
                    Foreground="White" 
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
