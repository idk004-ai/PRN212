<Window x:Class="QuanLiKhiThai.RegisterVehicle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register Vehicle" Height="450" Width="800">
    <Grid Background="Beige">
        <StackPanel Margin="20">
            <TextBlock Text="Register Vehicle" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Plate Number" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="200" VerticalAlignment="Center" Name="txtPlateNumber"/>
                <TextBlock Text="Format: 43A-12345" Margin="10,0,0,0" Foreground="Gray" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Brand" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="200" VerticalAlignment="Center" Name="txtBrand"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Model" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="200" VerticalAlignment="Center" Name="txtModel"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Manufacture Year" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="200" VerticalAlignment="Center" Name="txtManufactureYear" 
                         PreviewTextInput="TxtManufactureYear_PreviewTextInput"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Engine Number" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="200" VerticalAlignment="Center" Name="txtEngineNumber"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Register" Width="100" Margin="0,10,0,0" Click="RegisterVehicleButton_Click"/>
                <Button Content="Back" Width="100" Margin="10,10,0,0" Click="BackButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
