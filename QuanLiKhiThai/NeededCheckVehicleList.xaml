<Window x:Class="QuanLiKhiThai.NeededCheckVehicleList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLiKhiThai"
        mc:Ignorable="d"
        Title="Needed Check Vehicle List" Height="450" Width="1011">
    <Grid Background="Beige">
        <StackPanel Margin="20">
            <TextBlock Text="Needed Check Vehicle List" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <DataGrid Name="dataGridVehicle" AutoGenerateColumns="False" Height="300" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Plate Number" Binding="{Binding PlateNumber}" Width="*"/>
                    <DataGridTextColumn Header="Brand" Binding="{Binding Brand}" Width="*"/>
                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"/>
                    <DataGridTextColumn Header="Manufacture Year" Binding="{Binding ManufactureYear}" Width="*"/>
                    <DataGridTextColumn Header="Engine Number" Binding="{Binding EngineNumber}" Width="*"/>
                    <DataGridTextColumn Header="Last Inspection Date" Binding="{Binding LastInspectionDate}" Width="*"/>
                    <DataGridTextColumn Header="Last Inspection Result" Binding="{Binding LastInspectionResult}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>

